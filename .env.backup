# ==================== 搴旂敤鍩虹閰嶇疆 ====================
APP_NAME=MOP Backend
APP_VERSION=1.0.0
DEBUG=false
API_V1_PREFIX=/api/v1

# ==================== 鏈嶅姟鍣ㄩ厤缃?====================
HOST=0.0.0.0
PORT=8000

# ==================== 鏁版嵁搴撻厤缃?(PostgreSQL) ====================
# 娉ㄦ剰锛氳繖浜涘€煎繀椤讳笌 docker-compose.yml 涓殑閰嶇疆涓€鑷?
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=mop_user
POSTGRES_PASSWORD=mop_password_change_me
POSTGRES_DB=mop_db

# 鏁版嵁搴撹繛鎺ユ睜閰嶇疆
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO=false

# ==================== Redis 閰嶇疆 ====================
# 娉ㄦ剰锛氳繖浜涘€煎繀椤讳笌 docker-compose.yml 涓殑閰嶇疆涓€鑷?
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_change_me
REDIS_DB=0
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# ==================== JWT 閰嶇疆 ====================
# 璀﹀憡锛欽WT_SECRET_KEY 蹇呴』瓒冲澶嶆潅锛屽缓璁娇鐢?openssl rand -hex 32 鐢熸垚
JWT_SECRET_KEY=your_jwt_secret_key_must_be_at_least_32_characters_long_change_me
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ==================== RSA 鍔犲瘑閰嶇疆 ====================
# 鐢ㄤ簬浜岀淮鐮佸姞瀵嗙鍚嶇殑 RSA 瀵嗛挜瀵?
# 鐢熸垚鏂瑰紡锛歰penssl genrsa -out private_key.pem 2048
#         openssl rsa -in private_key.pem -pubout -out public_key.pem
# 鐒跺悗灏嗙閽ュ拰鍏挜鐨勫唴瀹癸紙鍖呮嫭 -----BEGIN/END----- 鏍囪锛夊～鍏ヤ笅闈?
RSA_PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----\nyour_rsa_private_key_content_here\n-----END RSA PRIVATE KEY-----\n

RSA_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----\nyour_rsa_public_key_content_here\n-----END PUBLIC KEY-----\n

# ==================== Jitsi Meet 閰嶇疆 ====================
# 绉佹湁鍖栭儴缃茬殑 Jitsi 鏈嶅姟鍣ㄩ厤缃?
JITSI_APP_ID=your_jitsi_app_id
JITSI_APP_SECRET=your_jitsi_app_secret_for_jwt_signing
JITSI_SERVER_URL=https://your-jitsi-server.com
JITSI_ROOM_MAX_OCCUPANTS=10

# ==================== 瀹夊叏閰嶇疆 ====================
# CORS 鍏佽鐨勬簮锛堝涓敤閫楀彿鍒嗛殧锛?
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://your-domain.com
# 鍏佽鐨勪富鏈哄垪琛紙澶氫釜鐢ㄩ€楀彿鍒嗛殧锛?
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# ==================== 鏃ュ織閰嶇疆 ====================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ==================== 涓氬姟閰嶇疆 ====================
INVITATION_CODE_LENGTH=8
LOCATION_UPDATE_THRESHOLD_METERS=200
MAX_SENSITIVE_DATA_COUNT=2000

# ==================== Socket.io 閰嶇疆 ====================
SOCKETIO_CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://your-domain.com
SOCKETIO_ASYNC_MODE=aiohttp

